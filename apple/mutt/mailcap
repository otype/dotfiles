# MS Word documents
application/msword; open_attachment.sh %s

# Images
image/jpg; open_attachment.sh %s
image/jpeg; open_attachment.sh %s
image/pjpeg; open_attachment.sh %s
image/png; open_attachment.sh %s
image/gif; open_attachment.sh %s

# PDFs
application/pdf; open_attachment.sh %s

# HTML
text/html;                      lynx %s; nametemplate=%s.html
text/html;                      lynx -dump %s; nametemplate=%s.html; copiousoutput

# TXT
text/plain; open_attachment.sh %s

# Unidentified files
application/octet-stream; open_attachment.sh %s
