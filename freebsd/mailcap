# Generic text
text/*;             cat; copiousoutput; edit=$VISUAL %s
message/rfc822;     cat; copiousoutput; edit=$VISUAL %s

# Images
image/jpg;          xloadimage %s
image/jpeg;         xloadimage %s
image/pjpeg;        xloadimage %s
image/png;          xloadimage %s
image/gif;          xloadimage %s

# PDFs + PS
application/pdf;          xpdf %s
application/postscript;   gv %s

# HTML
text/html;          w3m %s; nametemplate=%s.html
text/html;          w3m -dump %s; nametemplate=%s.html; copiousoutput

# Media
audio/*;            cmus %s
video/*;            mplayer %s

# MS Word documents
#application/msword; w3m %s

# Unidentified files
#application/octet-stream; w3m %s
