#!/usr/local/bin/zsh

export GOENV_ROOT="$HOME/.goenv"
export PATH="$GOENV_ROOT/bin:$PATH"
eval "$(goenv init -)"

# We simply put GOPATH to $HOME ... this will create:
#   - ~/src (exists anyway),
#   - ~/pkg and
#   - ~/bin (which actually already is part of env PATH).
export GOPATH=$HOME
export PATH="$GOPATH/bin:$PATH"
